<% if @status == 'success' %>
    $('#alert_messages').html('<%= j(render 'layouts/alert_messages', model: @client) %>');
    $('#clients_table').html('<%= j(render 'table') %>');
    $('#clients_modal').modal('hide');
<% elsif @status == 'fail' %>
    $('#clients_errors').html('<%= j(render 'layouts/error_messages', model: @client) %>');
<% end %>