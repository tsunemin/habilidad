<div class="card">
  <div class="card-header">
    <p class="title">個人情報</p>
  </div>
  <div class="card-body">
    <form>
      <div class="form-group">
        <label>氏名</label>
        <div class="input-group">
          <input type="text" class="form-control" value="<%= @current_user.last_name %>" >
          <input type="text" class="form-control" value="<%= @current_user.first_name %>" >
        </div>
      </div>
      <div class="form-group">
        <label>氏名(roman)</label>
        <div class="input-group">
          <input type="text" class="form-control" value="<%= @current_user.last_name_roman %>" >
          <input type="text" class="form-control" value="<%= @current_user.first_name_roman %>" >
        </div>
      </div>
      <div class="form-group">
        <label>生年月日</label>
        <input type="text" class="form-control" value="<%= @current_user.birthed_on %>" >
      </div>
      <div class="form-group">
        <label>入社年月</label>
        <div class="input-group">
          <select class="form-control" id="graduateYear">
            <%= for year in 1990..2050 do %>
              <option><%= year %></option>
            <% end %>
          </select>
          <p class="input-label">年</p>
          <select class="form-control" id="graduateMonth">
            <%= for month in 1..12 do %>
              <option><%= month %></option>
            <% end %>
          </select>
          <p class="input-label">月</p>
        </div>
      </div>
      <div class="form-group">
        <label>住所</label>
        <input type="text" class="form-control" placeholder="東京都豊島区" >
      </div>
      <div class="form-group">
        <label>最寄駅</label>
        <input type="text" class="form-control" placeholder="JR 池袋駅" >
      </div>
    </form>
  </div>
</div>
