<div class="card">
  <div class="card-header">
    <p class="title">学歴情報</p>
  </div>
  <div class="card-body">
    <form>
      <div class="form-group">
        <label for="schoolName">最終学歴</label>
        <input type="text" class="form-control" id="schoolName" placeholder="東京大学">
      </div>
      <div class="form-group">
        <label>卒業年月</label>
        <div class="input-group">
          <select class="form-control" id="graduateYear">
            <%= for year in 1990..2050 do %>
              <option><%= year %></option>
            <% end %>
          </select>
          <p class="input-label">年</p>
          <select class="form-control" id="graduateMonth">
            <%= for month in 1..12 do %>
              <option><%= month %></option>
            <% end %>
          </select>
          <p class="input-label">月</p>
        </div>
      </div>
      <div class="form-group">
        <label>卒業学校区分</label>
        <select class="form-control">
          <option>大学院</option>
          <option selected>大学</option>
          <option>短期大学</option>
          <option>高等専門学校</option>
          <option>普通高校</option>
          <option>専門学校</option>
          <option>工業高校</option>
          <option>商業高校</option>
          <option>中学校</option>
        </select>
      </div>
      <div class="form-group">
        <label>昼夜間</label>
        <select class="form-control">
          <option selected>昼間</option>
          <option>夜間</option>
        </select>
      </div>
      <div class="form-group">
        <label>文理系</label>
        <select class="form-control">
          <option selected>文系</option>
          <option>理系</option>
        </select>
      </div>
      <div class="form-group">
        <label>最終学歴</label>
        <select class="form-control">
          <option selected>卒業</option>
          <option>中退</option>
        </select>
      </div>
    </form>
  </div>
</div>
<style>
  .input-group .input-label {
      font-size: .7rem;
      margin: .4rem .4rem 0 .4rem;
  }
</style>
