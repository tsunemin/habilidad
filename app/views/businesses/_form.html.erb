<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_with(model: @business, remote: true) do |form| %>
    <div class="modal-header">
      <% if @business.id? %>
      <h5 class="modal-title"><%= t('dictionary.title.update') %></h5>
      <% else %>
      <h5 class="modal-title"><%= t('dictionary.title.create') %></h5>
      <% end %>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div id="businesses_errors"></div>
      <div class="form-group field">
        <%= form.label :name, class: "form-control-label text-primary" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <% if @business.id? %>
      <div class="form-group field">
        <%= form.label :created_at, class: "form-control-label" %>
        <%= form.label l(@business.created_at, format: :default), class: "form-control form-timestamp" %>
      </div>
      <div class="form-group field">
        <%= form.label :updated_at, class: "form-control-label" %>
        <%= form.label l(@business.updated_at, format: :default), class: "form-control form-timestamp" %>
      </div>
      <% end %>
    </div>
    <div class="modal-footer actions">
      <% if @business.id? %>
      <%= button_tag sanitize('<i class="fa fa-arrow-up"></i> ') + t('dictionary.button.update'), type: "submit", class: "btn btn-primary" %>
      <%= link_to sanitize('<i class="fa fa-ban"></i> ') + t('dictionary.button.destroy'), @business, method: :delete, remote: true, title: t('dictionary.title.destroy.confirm'), data: { confirm: t('dictionary.message.destroy.confirm'), commit: t('dictionary.button.destroy'), cancel: t('dictionary.button.cancel') }, class: "btn btn-danger" %>
      <% else %>
      <%= button_tag sanitize('<i class="fa fa-plus"></i> ') + t('dictionary.button.create'), type: "submit", class: "btn btn-primary" %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>